mixin lead(title, type, text)
  section.lead(class = 'lead--' + type)
    h2.lead__header #{title}
    - var src = "img/lead__" + type;
    picture.lead__img
      source(media='(min-width: 768px)' srcset = src + '--sm.webp' type='image/webp' )
      source(media='(min-width: 768px)' srcset = src + '--sm.jpg' )
      source(srcset = src + '--xs.webp' type='image/webp')
      img(src= src + '--xs.jpg')
    div.lead__text !{text}
